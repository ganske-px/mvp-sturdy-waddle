# ===========================================
# CREDENCIAIS DA API PREDICTUS
# ===========================================
PREDICTUS_USERNAME = "seu_usuario_aqui"
PREDICTUS_PASSWORD = "sua_senha_aqui"

# ===========================================
# CREDENCIAIS DO POSTHOG
# ===========================================
POSTHOG_KEY = "sua_senha_aqui"
POSTHOG_HOST = "sua_url_aqui"

# ===========================================
# GOOGLE GEMINI (LLM) - RISK ASSESSMENT
# ===========================================
GEMINI_API_KEY = "your_gemini_api_key_here"
GEMINI_MODEL = "gemini-1.5-flash"
# Alternative models: "gemini-1.5-pro", "gemini-1.5-flash-8b"
# Get free API key at: https://aistudio.google.com/app/apikey

# ===========================================
# USUÁRIOS AUTORIZADOS A ACESSAR O APP
# ===========================================
[USUARIOS_APP]

# Usuários padrão (remova ou altere em produção)
"admin" = "admin123"
"user" = "user123"

